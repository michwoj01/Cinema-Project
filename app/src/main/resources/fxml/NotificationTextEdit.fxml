<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.ii.cinemaProject.controller.NotificationController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <Label>Edit the message here</Label>
    </top>
    <center>
        <TextArea fx:id="messageTextArea" />
    </center>
    <bottom>
        <HBox>
            <Button onAction="#saveMessage">Save</Button>
            <Button onAction="#restoreMessage">Restore</Button>
        </HBox>
    </bottom>

</BorderPane>
