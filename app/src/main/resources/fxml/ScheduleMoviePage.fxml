<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.ii.cinemaProject.controller.ScheduleMoviesController">
    <center>
        <TableView fx:id="scheduleView" editable="true">
            <columns>
                <TableColumn fx:id="scheduleMovie" text="Movie"/>
                <TableColumn fx:id="scheduleHall" text="Hall nr."/>
                <TableColumn fx:id="scheduleDate" text="Date"/>
                <TableColumn fx:id="scheduleTickets" text="Available tickets"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>
