<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox alignment="CENTER" fillWidth="false" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.agh.ii.cinemaProject.controller.LoginPageController">
    <VBox styleClass="box">
        <Label styleClass="mainLabel" text="Welcome to Project Cinema">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <Label alignment="CENTER" maxWidth="Infinity" styleClass="emailLabel" text="Please type your email">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="email" alignment="CENTER" onAction="#login">
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" />
            </VBox.margin>
        </TextField>
        <Label fx:id="errorLabel" alignment="CENTER" maxWidth="Infinity" styleClass="errorLabel" text="Error" textFill="RED" visible="false">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <VBox alignment="CENTER">
            <Button onAction="#login" text="Login" styleClass="loginButton"/>
        </VBox>
    </VBox>
    <stylesheets>
        <URL value="@../css/LoginPage.css" />
    </stylesheets>
</VBox>
