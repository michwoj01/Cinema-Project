<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pl.edu.agh.ii.cinemaProject.controller.MovieController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox>
            <TextField fx:id="name" promptText="Enter search text"/>
            <TextField fx:id="minDuration" promptText="Enter minimal duration"/>
        </HBox>
    </top>
    <center>
        <ListView fx:id="moviesListView"/>
    </center>

</BorderPane>
